# Environment variables for TransFlow
# Copy this file to .env and fill in your API keys

# Firecrawl API (required for download command)
TRANSFLOW_FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# OpenAI API (required for translate command)
TRANSFLOW_OPENAI_API_KEY=your_openai_api_key_here
TRANSFLOW_OPENAI_BASE_URL=https://api.openai.com/v1

# Default settings
TRANSFLOW_DEFAULT_MODEL=gpt-4o
TRANSFLOW_DEFAULT_LANGUAGE=zh

# Logging
TRANSFLOW_LOG_LEVEL=INFO
# TRANSFLOW_LOG_FILE=transflow.log
# TRANSFLOW_LOG_JSON=false

# HTTP settings
TRANSFLOW_HTTP_TIMEOUT=30
TRANSFLOW_HTTP_MAX_RETRIES=3
TRANSFLOW_HTTP_CONCURRENT_DOWNLOADS=5
